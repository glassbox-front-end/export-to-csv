{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "dom",
            "es2015.collection",
            "es2015.promise",
            "es5"
        ],
        "moduleResolution": "node",
        "outDir": "./build"
    },
    "exclude": [
        "node_modules",
        "src/*.spec.ts",
        "build"
    ]
}